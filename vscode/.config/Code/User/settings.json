{
    "C_Cpp.clang_format_fallbackStyle": "llvm", //  use compact formatting
    "C_Cpp.updateChannel": "Insiders", // get cpp beta features
    "diffEditor.ignoreTrimWhitespace": false, // don't ignore git diff ws
    "editor.autoClosingBrackets": "never", // don't complete brackets
    "editor.autoClosingQuotes": "never", // don't complete quotes
    "editor.bracketPairColorization.enabled": true, // colorize brackets
    "editor.cursorBlinking": "solid", // don't blink cursor
    "editor.minimap.enabled": false, // turn off code map
    "editor.renderLineHighlight": "gutter", // highlight line no of current line
    "editor.renderWhitespace": "boundary", // show leading and trailing ws
    "editor.rulers": [
        {
            "column": 80,
            "color": "#66666622"
        },
        {
            "column": 120,
            "color": "#66666644"
        },
    ], // visual guides for line limit at 80 and 120
    "editor.scrollBeyondLastLine": false, // stop scrolling at the bottom
    "editor.suggest.preview": true, // better tab autocomplete
    "explorer.compactFolders": false, // show full subfolder structure icons
    "explorer.confirmDelete": false, // don't ask when I delete files
    "explorer.confirmDragAndDrop": false, // don't ask when I move files
    "files.eol": "\n", // linux style end of line
    "files.insertFinalNewline": true, // always have a final newline
    "files.trimFinalNewlines": true, // no extra final newlines
    "python.formatting.blackArgs": [
        "--line-length=80"
    ], // limit black to 80 line length
    "python.formatting.provider": "black", // use black for python formatting
    "python.languageServer": "Pylance", // use pylance for python linting
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/venv": true,
        "**/vendor": true,
        "**/build": true,
        "**/migrations": true,
    }, // don't search in non project code folders
    "telemetry.enableCrashReporter": false, // disable crash reporting
    "telemetry.enableTelemetry": false, // disable telemetry
    "terminal.integrated.fontSize": 13, // fix missing underscores in terminal
    "terminal.integrated.rendererType": "dom", // faster terminal render
    "terminal.integrated.scrollback": 10000, // larger terminal scrollback
    "window.openFilesInNewWindow": "on", // don't open random files to project
    "window.titleBarStyle": "custom", // remove extra headerbar on linux
    "window.zoomLevel": -1, // zoom out a bit
    "workbench.editor.enablePreview": false // always open tabs, not previews
}
